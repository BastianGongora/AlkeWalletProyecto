<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.A6IngresarDinero">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/btnVolverRequest"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:navigationIconTint="@color/black"
            app:title="Ingresar dinero"
            app:titleCentered="true"
            app:titleTextAppearance="@style/ToolbarStyle"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#57000000" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24sp">

            <ImageView
                android:id="@+id/perfilp4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toStartOf="@+id/txtnombre_ingresardinero"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/person4" />

            <TextView
                android:id="@+id/txtnombre_ingresardinero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="11dp"
                android:text="Reem Khaled"
                android:fontFamily="@font/jua"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/perfilp4"
                app:layout_constraintTop_toTopOf="@+id/perfilp4" />

            <TextView
                android:id="@+id/txt_emailingresardinero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/jua"
                android:text="reem_1993@gmail.com"
                android:textColor="#63000000"
                app:layout_constraintBottom_toBottomOf="@+id/perfilp4"
                app:layout_constraintStart_toStartOf="@+id/txtnombre_ingresardinero" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jua"
                android:text="Cantidad a ingresar"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/etxcantidadingresar"
                android:layout_width="match_parent"
                android:layout_height="49dp"

                android:layout_marginTop="10dp"
                android:background="@drawable/txt_ingreso"
                android:fontFamily="@font/jua"
                android:inputType="text"
                android:paddingStart="14sp"
                android:text="20.00"
                android:textColor="#2196F3"
                android:textSize="12sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jua"
                android:paddingTop="25sp"
                android:paddingBottom="10sp"
                android:text="Cantidad a ingresar"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/etxnotas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:autofillHints="emailAddress"
                android:background="@drawable/txt_blanco"
                android:fontFamily="@font/jua"
                android:hint="Agregar Notas de transferencia"
                android:inputType="textMultiLine"
                android:gravity="start|top"
                android:paddingLeft="15sp"
                android:paddingTop="14dp"
                android:lines="10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnID"
                android:layout_width="317dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/boton_celeste"
                android:drawableLeft="@drawable/request_icon"
                android:drawablePadding="4.38dp"
                android:gravity="center_vertical"
                android:paddingStart="85dp"
                android:text="Ingresar Dinero"
                app:backgroundTint="@null" />



        </LinearLayout>
    </LinearLayout>

</FrameLayout>