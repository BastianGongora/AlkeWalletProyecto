<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_login"
    tools:context=".Fragment.LoginFragment">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jua"
        android:text="Logea y empieza a"
        android:textSize="32sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="81dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jua"
        android:text="transferir!"
        android:textSize="32sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="134dp" />

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="555dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="171dp">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/jua"
            android:text="Email"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="205dp" />




        <EditText
            android:id="@+id/editTextText"
            android:layout_width="341dp"
            android:layout_height="47dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/txt_blanco"
            android:fontFamily="@font/jua"
            android:inputType="text"
            android:paddingStart="14sp"
            android:text="Ingresar Email"
            android:textColor="#B5B5B5"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="239dp" />


        <TextView
            android:id="@+id/txtpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/jua"
            android:text="Contraseña"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="316dp" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_pass_login_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtpass"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/txt_blanco"
                android:fontFamily="@font/jua"
                android:inputType="textVisiblePassword"
                android:paddingStart="14sp"
                android:paddingEnd="197sp"
                android:text="Ingresar tu contraseña"
                android:textColor="#B5B5B5"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_forgotpass_loginpage"
            android:backgroundTint="@color/white"
            android:textColor="#1A87DD"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/input_pass_login_page"
            android:fontFamily="@font/jua"
            android:text="Olvidaste tu contraseña?"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textAlignment="textEnd"

            />


        <Button
            android:id="@+id/button2"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="165dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/boton_celeste"
            android:text="Login"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_create_account_loginpage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login_loginpage"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/jua"
            android:text="Crear una nueva cuenta"
            android:textColor="#1A87DD"
            android:textSize="14sp"
            android:textStyle="bold"

            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>